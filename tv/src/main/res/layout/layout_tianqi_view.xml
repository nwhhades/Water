<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="120pt">

    <ImageView
        android:id="@+id/iv_weather_wea"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:layout_marginStart="10pt"
        android:layout_marginTop="10pt"
        android:contentDescription="@string/iv"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_weather_err"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_weather_wea"
        android:layout_width="80pt"
        android:layout_height="40pt"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLength="2"
        android:textColor="@color/white"
        android:textSize="26pt"
        app:layout_constraintBottom_toBottomOf="@id/iv_weather_wea"
        app:layout_constraintStart_toEndOf="@id/iv_weather_wea" />

    <TextView
        android:id="@+id/tv_weather_tem"
        android:layout_width="wrap_content"
        android:layout_height="80pt"
        android:layout_marginStart="10pt"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="50pt"
        app:layout_constraintStart_toEndOf="@id/iv_weather_wea"
        app:layout_constraintTop_toTopOf="@id/iv_weather_wea" />

    <TextView
        android:id="@+id/tv_weather_wendu"
        android:layout_width="wrap_content"
        android:layout_height="40pt"
        android:layout_marginStart="10pt"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingStart="0pt"
        android:paddingEnd="10pt"
        android:textColor="@color/white"
        android:textSize="26pt"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_weather_tem"
        app:layout_constraintStart_toEndOf="@id/tv_weather_tem" />

    <TextView
        android:id="@+id/tv_weather_city"
        android:layout_width="wrap_content"
        android:layout_height="40pt"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingStart="0pt"
        android:paddingEnd="10pt"
        android:textColor="@color/white"
        android:textSize="26pt"
        app:layout_constraintStart_toEndOf="@id/tv_weather_wea"
        app:layout_constraintTop_toTopOf="@id/tv_weather_wea" />

    <TextView
        android:id="@+id/tv_weather_err"
        android:layout_width="wrap_content"
        android:layout_height="100pt"
        android:layout_marginStart="10pt"
        android:gravity="center"
        android:paddingStart="0pt"
        android:paddingEnd="10pt"
        android:text="@string/weather_err"
        android:textColor="@color/white"
        android:textSize="60pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_weather_wea"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>